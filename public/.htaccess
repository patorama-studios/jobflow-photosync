
# Enable URL rewriting
RewriteEngine On

# If an existing asset or directory is requested, serve it
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -f [OR]
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI} -d
RewriteRule ^ - [L]

# If the requested resource doesn't exist, rewrite to index.html
RewriteRule ^ /index.html

# Set security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
  Header set Cache-Control "max-age=604800"
</IfModule>

# Set proper MIME types for JavaScript modules and other assets
<IfModule mod_mime.c>
  # Essential JavaScript MIME types
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType text/javascript .js
  AddType text/javascript .mjs
  
  # JavaScript modules
  AddType application/javascript .js .mjs
  
  # JSON
  AddType application/json .json
  
  # WebAssembly
  AddType application/wasm .wasm
  
  # Web fonts
  AddType font/woff .woff
  AddType font/woff2 .woff2
  AddType application/vnd.ms-fontobject .eot
  AddType font/ttf .ttf
  AddType font/collection .ttc
  AddType font/otf .otf
  
  # Images
  AddType image/webp .webp
  AddType image/svg+xml .svg
</IfModule>

# Enable GZIP compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/x-javascript
</IfModule>

# Set correct Content-Type header for JavaScript modules
<FilesMatch "\.(js|mjs)$">
  <IfModule mod_headers.c>
    Header set Content-Type "application/javascript"
  </IfModule>
</FilesMatch>
